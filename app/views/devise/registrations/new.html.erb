<div class="auth-form">
  <h1>Rejestracja</h1>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>

  <div class="field">
    <%= f.text_field :name, autofocus: true, placeholder: t('name') %>
  </div>

  <div class="field">
    <%= f.email_field :email, autofocus: true, placeholder: t('activerecord.attributes.user.email') %>
  </div>

  <div class="field">
    <%= f.password_field :password, autocomplete: "off", placeholder: t('activerecord.attributes.user.password') %>
  </div>

  <div class="field">
    <%= f.password_field :password_confirmation, autocomplete: "off", placeholder: t('activerecord.attributes.user.password_confirmation') %>
  </div>

  <div class="field">
    <%= f.text_field :city, placeholder: t('city') %>
  </div>

  <div class="field">
    <%= f.text_field :phone, placeholder: t('phone') %>
  </div>

  <div class="field">
    <%= f.text_field :skype, placeholder: t('skype_optional') %>
  </div>

  <div class="field">
    <%= f.text_field :fb, placeholder: t('facebook_optional') %>
  </div>

  <div class="field">
    <%= f.select :device, User.device_options, prompt: 'Zwykle internet przeglÄ…dam przez:' %>
  </div>

  <div class="field">
    <%= f.text_field :note, placeholder: t('note_optional') %>
  </div>

  <div class="actions">
    <%= f.submit t('devise.shared.links.sign_up') %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
</div>