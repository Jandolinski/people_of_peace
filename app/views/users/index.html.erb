<div class='booyah-box'>

<h1><%= t('users') %></h1>

<table class="table table-hover">
  <thead>
    <tr>
      <th><%= t('name') %></th>
      <th><%= t('email') %></th>
      <th><%= t('phone') %></th>
      <th><%= t('city') %></th>
      <th><%= t('notify') %></th>
      <th><%= t('activerecord.attributes.user.last_sign_in_at') %></th>
      <th><%= t('login_numbers') %></th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.name %></td>
        <td><%= user.email %></td>
        <td><%= user.phone %></td>
        <td><%= user.city %></td>
        <td><%= bell(user.notify) %></td>
        <td><%= time_ago_in_words(user.last_sign_in_at) %> temu</td>
        <% if current_user.admin? || current_user == user %>
            <td><%= user.sign_in_count %></td>
            <td><%= link_to t('show'), user %></td>
            <td><%= link_to t('edit'), edit_user_path(user) %></td>
          <td><%= link_to t('destroy'), user, method: :delete, data: { confirm: t('sure') } %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>
</div>
